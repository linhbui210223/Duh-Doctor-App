<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <View
        android:id="@+id/blueBox"
        android:layout_width="377dp"
        android:layout_height="171dp"
        android:background="@drawable/rounded_square"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="341dp"
        android:layout_height="124dp"
        android:layout_centerHorizontal="true"
        android:text="Welcome to Duh-Doctor App!"
        android:textColor="#FBF6F6"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="292dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:text="Find your best doctor here!"
        android:textAlignment="center"
        android:textColor="#747272"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="188dp" />

    <Button
        android:id="@+id/btnSetAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvWelcome"
        android:backgroundTint="#2C87FF"
        android:text="SET APPOINTMENT"
        android:theme="@style/Button.White"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="276dp" />

    <Button
        android:id="@+id/btnViewAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSetAppointment"
        android:backgroundTint="#2C87FF"
        android:text="VIEW APPOINTMENT"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="340dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnViewAppointment"
        android:backgroundTint="#9DADC1"
        android:text="LOG OUT"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="404dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="192dp"
        android:layout_height="152dp"
        android:src="@mipmap/ic_launcher_foreground"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="506dp" />

</androidx.constraintlayout.widget.ConstraintLayout>